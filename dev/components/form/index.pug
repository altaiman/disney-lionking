include field/field.pug
include field/textarea.pug

mixin form
  +b.FORM.form
    +e.line
      +field({
        placeholder: 'ФИО'
      })
    +e.line
      +field({
        placeholder: 'E-mail'
      })
    +e.line
      +field({
        placeholder: '+7 (___) ___-__-__'
      })
    +e.line
      +field({
        placeholder: 'Введите свой город'
      })
    +e.line
      +b.LABEL.file
        input(type="file")
        +e.DIV.ico
          +svg({
            name: 'ico-attach'
          })
        span Загрузить фото чека
    +button({
      type: 'button',
      name: 'ЗАРЕГЕСТРИРОВАТЬ ЧЕК',
      size: 'full',
      style: 0,
      mod: 'decor-right'
    })
    
        
        
