include !bemto/index.pug

-
  var global = {
    title: 'Disney',
    separator: ' | ',
    description: 'Покупай продукцию со специальной промо стойки на сумму от 300 рублей, заполняй форму ниже и прикрепляй чек. Выигрывай призы.',
    lang: 'ru',
    paths: {
      images: 'img/',
      pictures: 'pictures/',
      icons() { return this.images+'symbols.svg' }
    },
    template: {
      adaptive: true,
      width: 1240
    },
    
    production: false
  }
  
  function randomInt(min,max) {
      return Math.floor(Math.random()*(max-min+1)+min);
  }
  
  function toPrice(x) {
    return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, " ");
  }
